# Stealth System Aliases
# Додайте до ~/.zshrc: source ~/Documents/GitHub/System/stealth_aliases

# Основні stealth команди
alias stealth-cleanup='~/Documents/GitHub/System/stealth_cleanup.sh'
alias stealth-monitor='~/Documents/GitHub/System/stealth_monitor.sh'
alias hardware-spoof='~/Documents/GitHub/System/hardware_spoof.sh'

# Швидкі перевірки
alias check-fingerprint='echo "Hostname: $(scutil --get HostName)"; echo "MAC: $(ifconfig en0 2>/dev/null | awk "/ether/{print \$2}")"; echo "HW UUID: $(system_profiler SPHardwareDataType 2>/dev/null | grep "Hardware UUID" | awk "{print \$3}")"'
alias check-stealth='ps aux | grep -E "(stealth|behavior)" | grep -v grep'

# Швидке очищення
alias quick-clean='sudo rm -rf /var/log/* /tmp/com.apple.* ~/.Spotlight-V100/*; sudo dscacheutil -flushcache'
alias reset-network='sudo ifconfig en0 down; sudo ifconfig en0 up; sudo dscacheutil -flushcache'

# Моніторинг
alias monitor-logs='tail -f /var/log/system.log | grep -i windsurf'
alias monitor-network='netstat -rn | head -10'

# Відновлення
alias restore-system-profiler='sudo cp /usr/sbin/system_profiler.orig /usr/sbin/system_profiler 2>/dev/null'
alias stop-stealth='killall -f stealth_monitor.sh; killall -f behavior_randomizer.sh'
