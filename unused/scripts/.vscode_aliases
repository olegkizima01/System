# VS Code Cleanup System - Aliases
# –î–æ–¥–∞–π—Ç–µ –¥–æ ~/.zshrc: source ~/Documents/GitHub/System/.vscode_aliases

# –û—Å–Ω–æ–≤–Ω—ñ –∫–æ–º–∞–Ω–¥–∏
alias vc-clean='cd ~/Documents/GitHub/System && ./deep_vscode_cleanup.sh'
alias vc-restore='cd ~/Documents/GitHub/System && ./restore_vscode_backup.sh'
alias vc-check='cd ~/Documents/GitHub/System && ./check_vscode_backup.sh'
alias vc-manage='cd ~/Documents/GitHub/System && ./manage_vscode_configs.sh'

# –®–≤–∏–¥–∫—ñ –ø–µ—Ä–µ–≤—ñ—Ä–∫–∏
alias vc-backup-list='ls -lhd /tmp/vscode_backup_*'
alias vc-process='ps aux | grep "sleep 18000" | grep "vscode_restore" | grep -v grep'
alias vc-hostname='scutil --get HostName'
alias vc-machineid='cat ~/Library/Application\ Support/Code/machineid 2>/dev/null || echo "–ù–µ –∑–Ω–∞–π–¥–µ–Ω–æ"'

# –î–æ–∫—É–º–µ–Ω—Ç–∞—Ü—ñ—è
alias vc-readme='cat ~/Documents/GitHub/System/README_VSCODE.md | less'

# –£—Ç–∏–ª—ñ—Ç–∏
alias vc-kill-restore='ps aux | grep "sleep 18000" | grep "vscode_restore" | grep -v grep | awk "{print \$2}" | xargs kill'
alias vc-backup-save='BACKUP_DIR=$(ls -td /tmp/vscode_backup_* 2>/dev/null | head -1) && [ -n "$BACKUP_DIR" ] && cp -r "$BACKUP_DIR" ~/Documents/vscode_backup_permanent_$(date +%Y%m%d_%H%M%S) && echo "–ó–±–µ—Ä–µ–∂–µ–Ω–æ –≤ ~/Documents/" || echo "–ë–µ–∫–∞–ø –Ω–µ –∑–Ω–∞–π–¥–µ–Ω–æ"'

# –ö–æ–Ω—Ñ—ñ–≥—É—Ä–∞—Ü—ñ—ó
alias vc-configs='ls -lh ~/Documents/GitHub/System/configs_vscode/'
alias vc-config-count='ls -1 ~/Documents/GitHub/System/configs_vscode/ 2>/dev/null | wc -l | xargs'

echo "‚úÖ VS Code Cleanup System aliases –∑–∞–≤–∞–Ω—Ç–∞–∂–µ–Ω–æ!"
echo "üí° –î–æ—Å—Ç—É–ø–Ω—ñ –∫–æ–º–∞–Ω–¥–∏:"
echo "   vc-clean      - –ó–∞–ø—É—Å—Ç–∏—Ç–∏ –æ—á–∏—â–µ–Ω–Ω—è"
echo "   vc-restore    - –í—ñ–¥–Ω–æ–≤–∏—Ç–∏ –∑ –±–µ–∫–∞–ø—É"
echo "   vc-check      - –ü–µ—Ä–µ–≤—ñ—Ä–∏—Ç–∏ —Å—Ç–∞—Ç—É—Å"
echo "   vc-manage     - –£–ø—Ä–∞–≤–ª—ñ–Ω–Ω—è –∫–æ–Ω—Ñ—ñ–≥—É—Ä–∞—Ü—ñ—è–º–∏"
echo ""
echo "üìö –î–æ–∫—É–º–µ–Ω—Ç–∞—Ü—ñ—è:"
echo "   vc-readme     - –û—Å–Ω–æ–≤–Ω–∞ –¥–æ–∫—É–º–µ–Ω—Ç–∞—Ü—ñ—è"
echo ""
echo "üîß –£—Ç–∏–ª—ñ—Ç–∏:"
echo "   vc-configs    - –°–ø–∏—Å–æ–∫ –∫–æ–Ω—Ñ—ñ–≥—É—Ä–∞—Ü—ñ–π"
echo "   vc-backup-save - –ó–±–µ—Ä–µ–≥—Ç–∏ –±–µ–∫–∞–ø –Ω–∞–∑–∞–≤–∂–¥–∏"
echo ""
