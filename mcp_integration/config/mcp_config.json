{
  "activeClient": "native",
  "mcpClients": {
    "native": {
      "name": "Native SDK Client",
      "type": "python_sdk",
      "enabled": true,
      "config": {},
      "mcp_config_path": "/Users/dev/Documents/GitHub/System/mcp_integration/config/mcp_config.json"
    },
    "open_mcp": {
      "name": "CopilotKit Open-MCP",
      "type": "python",
      "enabled": true,
      "config": {
        "agent_dir": "mcp_integration/agents/open_mcp"
      }
    },
    "continue": {
      "name": "Continue CLI",
      "type": "npm_cli",
      "enabled": true,
      "command": "cn",
      "fallback_command": "npx @continuedev/cli"
    }
  },
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp"
      ],
      "description": "Context7 MCP Server for memory and context management",
      "timeout": 30000,
      "retryAttempts": 3,
      "category": "ai"
    },
    "playwright": {
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp"
      ],
      "description": "Playwright MCP Server for browser automation",
      "timeout": 60000,
      "retryAttempts": 2,
      "category": "browser"
    },
    "pyautogui": {
      "enabled": false,
      "command": "python3",
      "args": [
        "-m",
        "mcp_pyautogui_server"
      ],
      "description": "PyAutoGUI MCP Server for GUI automation",
      "timeout": 30000,
      "retryAttempts": 2,
      "category": "gui"
    },
    "applescript": {
      "command": "npx",
      "args": [
        "-y",
        "@iflow-mcp/applescript-mcp"
      ],
      "description": "AppleScript MCP Server for macOS automation",
      "timeout": 30000,
      "retryAttempts": 2,
      "category": "system"
    },
    "filesystem": {
      "enabled": true,
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem"
      ],
      "description": "Filesystem MCP Server for file operations",
      "timeout": 30000,
      "retryAttempts": 2,
      "category": "system"
    },
    "sonarqube": {
      "enabled": false,
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "SONARQUBE_TOKEN",
        "-e",
        "SONARQUBE_ORG",
        "-e",
        "SONARQUBE_URL",
        "mcp/sonarqube"
      ],
      "env": {
        "SONARQUBE_TOKEN": "${SONAR_API_KEY}",
        "SONARQUBE_URL": "${SONAR_URL}",
        "SONARQUBE_ORG": "${SONAR_ORG_KEY}"
      },
      "description": "SonarQube MCP Server for code quality analysis",
      "timeout": 60000,
      "retryAttempts": 2,
      "category": "code_analysis"
    },
    "local_fallback": {
      "enabled": false,
      "command": "python3",
      "args": [
        "-m",
        "mcp_integration.servers.local_server"
      ],
      "description": "Local fallback for all MCP operations",
      "timeout": 10000,
      "retryAttempts": 1,
      "category": "fallback"
    },
    "memory": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-memory"
      ],
      "env": {},
      "description": "Official Anthropic Memory Server for knowledge-graph based persistent memory.",
      "category": "memory",
      "enabled": true,
      "timeout": 30000,
      "retryAttempts": 2
    }
  },
  "fallbackChain": [
    "local_fallback"
  ],
  "defaultServer": "context7",
  "defaultAIServer": "context7",
  "logging": {
    "level": "info",
    "file": "mcp_integration.log",
    "maxSize": "10MB",
    "maxFiles": 5
  }
}